{
 
  "manifest_version": 2,
  "name": "ITD-82",
  "version": "1.0.0",
  "icons" : {
    "48": "icon.jpg",
    "128": "icon.jpg"
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icon.jpg"
  },
   
  "content_security_policy": "script-src 'self' https://api.vk.com; object-src 'self'",
  "permissions": ["tabs", "alarms", "notifications", "tabs", "storage", "http://*/*", "https://*/*"],
  "background": {
  	"scripts": ["background.js", "libs/jquery.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}